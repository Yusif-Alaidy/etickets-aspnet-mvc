<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETickets</title>
    <script type="importmap"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>


   




</head>
<body class="d-flex flex-column min-vh-100">
    <main class="flex-fill">


        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand text-light" href="#">CineBook</a>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4 flex-grow-1">
                        <li class="nav-item">
                        <a class="nav-link active text-light" asp-area="Customer" asp-controller="Home" asp-action="Index" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Link</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        @if (User.Identity is not null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item text-ligh"><a class="nav-link active text-light" href="/Identity/Account/Logout">Logout</a></li>
                            <li class="nav-item text-ligh"><a class="nav-link active text-light" href="/Identity/Profile/Welcome">Welcome @User.Identity.Name</a></li>
                        }
                        else
                        {
                            <li class="nav-item text-ligh"><a class="nav-link active text-light" href="/Identity/Account/Register">Register</a></li>
                            <li class="nav-item text-ligh"><a class="nav-link active text-light" href="/Identity/Account/Login">Login</a></li>
                        }
                    </ul>
                    <form class="d-flex" role="search" asp-area="Customer" asp-controller="Home" asp-action="Index" method="get">
                        <input  class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search" value="@ViewBag.Search" />

                        <input hidden type="number" class="form-control" id="minPrice" placeholder="0" name="minPrice" value="@ViewBag.MinPrice">
                        <input hidden type="number" class="form-control" id="maxPrice" placeholder="1000" name="maxPrice" value="@ViewBag.MaxPrice">





                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>



    <div>
            @RenderBody()
    </div>

    </main>

    <footer class="bg-dark text-white pt-4 pb-3 border-top border-secondary ">
        <div class="container ps-5 pe-">
            <div class="row align-items-center">


                <div class="col-md-4 text-start mb-3 mb-md-0 ps-5">
                    <h5 class="d-flex align-items-center gap-2 mb-0">
                        <i class="fas fa-video"></i> CineBook
                    </h5>
                </div>


                <div class="col-md-4 text-center mb-3 mb-md-0 ps-5">
                    <h5 class="d-flex align-items-center gap-2 mb-0">
                        <i class="fas fa-ticket-alt"></i> Book Your Ticket Now
                    </h5>
                </div>


                <div class="col-md-4 text-end mb-3 mb-md-0">
                    <h5 class="d-flex align-items-center gap-2 mb-0 ps-5 ms-5">
                        <i class="fas fa-copyright"></i> Copyright © Yusif Alaidy
                    </h5>
                </div>

            </div>
        </div>
    </footer>


    
    <script src="~/js/customer/scripts.js" asp-append-version="true"></script> 
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js"></script>
    @await RenderSectionAsync("Scripts", required: false) 


</body>
</html>
