@using ETickets.ViewModel
@model ActorDetails
<main class="bg-black text-white">


    <section class="container py-4">

        
        <div class="row g-4 mt-4">

            <div class="col-md-3  border-0 rounded" style="margin-left: 300px;">
                @if (!string.IsNullOrWhiteSpace(Model.Actor.ProfilePicture))
                {
                    <img src="~/img/cast/@Model.Actor.ProfilePicture" height="200" width="200" alt="" class="img-fluid rounded shadow-sm mb-3 img-fluid" />
                }
                else
                {
                    <img src="~/img/default2.jpg" height="200" width="200" alt="" class="img-fluid rounded shadow-sm mb-3 img-fluid" />
                }
            </div>

            <div class="col-md-3 text-start text-light text-center align-items-center pt-0" >
                <div class="card-body p-2 ">
                    <h2 class="card-title m-0">@Model.Actor.FirstName @Model.Actor.LastName</h2>
                </div>
                <div>
                    <span class="ms-3 me-2">@Model.Actor.Bio</span>
                </div>
            </div>
        </div>



            <hr class="my-5 border-white-50" />

            <section>
                <h4><i class="fas fa-film me-2"></i>@Model.Actor.FirstName @Model.Actor.LastName Movies</h4>
                <div class="row row-cols-2 row-cols-md-5 g-3 mt-3">
                    @foreach(var movie in Model.Movies)
                    {                  
                    
                    <a asp-area="Customer" asp-controller="Home" asp-action="Movie" asp-route-id="@movie.Id">
                        <div class="col">
                            <div class="card bg-dark text-white border-0 h-100">
                                <img src="~/img/@movie.ImgUrl" class="card-img-top" alt="Movie poster for Arrival showing a woman looking at a spaceship" />
                                <div class="card-body p-2">
                                    <h6 class="card-title m-0">@movie.Category</h6>
                                    <small>★★★★☆ 4.5</small>
                                </div>
                            </div>
                        </div>

                    </a>
                    }

                </div>
                <div class="text-center mt-4">
                    <button class="btn btn-outline-light btn-sm">Show More</button>
                </div>
            </section>
    </section>
</main>
