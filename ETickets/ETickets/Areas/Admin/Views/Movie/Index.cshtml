@using ETickets.ViewModel
@model List<Movie>

@{
    var quantity = 10;
}

    @section Scripts
    {
        <partial name="_NotificationPartial">
    }


    <div class="container">
        <div class="row mb-3 align-items-center my-3">
            <div class="col-md-6">
                <h2 class="display-6">All Products</h2>
            </div>
            <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
                <a asp-area="admin" asp-controller="Movie" asp-action="Create" class="btn btn-success">Create</a>
            </div>
        </div>

        <div class="row">
            <div class="col-12">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col">Status</th>
                            <th scope="col">Category Name</th>

                            <th scope="col">Cinema Name</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                            @if (item.MovieStatus == 1 || item.MovieStatus == 2)
                            {
                                    <td><span class="badge text-bg-success">@item.MovieStatus</span></td>
                            }
                            else
                            {
                                    <td><span class="badge text-bg-danger">@item.MovieStatus</span></td>
                            }
                                <td>@item.Category.Name</td>
                                <td>@item.Cinema.Name</td>
                                <td>
                                <a asp-area="Admin" asp-controller="Movie" asp-action="Update" asp-route-Id="@item.Id" type="button" class="btn btn-warning">Edit</a>
                                <a asp-area="Admin" asp-controller="Movie" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger btn-delete">Delete</a>
                                </td>

                            </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
