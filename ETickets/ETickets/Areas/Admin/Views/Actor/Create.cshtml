@using ETickets.Models
@model Actor

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Actor</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="name" class="form-label">FirstName</label>
                    <input class="form-control" asp-for="FirstName" placeholder="First Name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label for="name" class="form-label">LastName</label>
                    <input class="form-control" asp-for="LastName" placeholder="Last Name">
                    <span asp-validation-for="LastName" class="text-danger"></span>

                </div>

                <div class="mb-3">
                    <label for="bio" class="form-label">Bio</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a bio here" style="height: 100px" name="Bio"></textarea>
                        <label for="description">You Bio Here...</label>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label for="News" class="form-label">News</label>
                    <input class="form-control" id="News" name="News" placeholder="News">
                </div>

                <div class="mb-3">
                    <label for="Img" class="form-label">Img</label>
                    <input type="file" class="form-control" id="ProfilePicture" name="ProfilePicture" accept="image/*" placeholder="ProfilePicture">
                </div>
                


                
                
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

